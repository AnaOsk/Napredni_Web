extends layout

block content
  .min-h-screen.flex.items-center.justify-center.py-12.px-4
    .max-w-md.w-full.space-y-8.bg-white.p-8.rounded-lg.shadow-md
      div
        h2.mt-6.text-center.text-3xl.font-extrabold.text-gray-900 Registracija
        p.mt-2.text-center.text-sm.text-gray-600
          | Već imate račun?
          a.font-medium.text-indigo-600.hover_text-indigo-500(href='/auth/login') Prijavite se

      if error
        .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative(role='alert')
          span.block.sm_inline= error

      form.mt-8.space-y-6(action='/auth/register', method='POST')
        .rounded-md.shadow-sm.-space-y-px
          div
            label.sr-only(for='username') Korisničko ime
            input#username.appearance-none.rounded-none.relative.block.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-500.text-gray-900.rounded-t-md.focus_outline-none.focus_ring-indigo-500.focus_border-indigo-500.focus_z-10.sm_text-sm(type='text', name='username', placeholder='Korisničko ime', required)
          div
            label.sr-only(for='email') Email adresa
            input#email.appearance-none.rounded-none.relative.block.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-500.text-gray-900.focus_outline-none.focus_ring-indigo-500.focus_border-indigo-500.focus_z-10.sm_text-sm(type='email', name='email', placeholder='Email adresa', required)
          div
            label.sr-only(for='password') Lozinka
            input#password.appearance-none.rounded-none.relative.block.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-500.text-gray-900.focus_outline-none.focus_ring-indigo-500.focus_border-indigo-500.focus_z-10.sm_text-sm(type='password', name='password', placeholder='Lozinka', required)
          div
            label.sr-only(for='confirmPassword') Potvrda lozinke
            input#confirmPassword.appearance-none.rounded-none.relative.block.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-500.text-gray-900.rounded-b-md.focus_outline-none.focus_ring-indigo-500.focus_border-indigo-500.focus_z-10.sm_text-sm(type='password', name='confirmPassword', placeholder='Potvrda lozinke', required)

        div
          button.group.relative.w-full.flex.justify-center.py-2.px-4.border.border-transparent.text-sm.font-medium.rounded-md.text-white.bg-indigo-600.hover_bg-indigo-700.focus_outline-none.focus_ring-2.focus_ring-offset-2.focus_ring-indigo-500(type='submit')
            | Registriraj se
